<%- include("../partials/header")%>
    <div class="row">
        <h1 style="text-align: center">Edit <%= item.name %></h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/items/<%= item._id %>?_method=PUT" method="POST">
                <div class="form-group">
					<label for="name">Name</label>
                    <input class="form-control" type="text" name="item[name]" value="<%= item.name %>"> 
                </div>
                <div class="form-group">
					<label for="image">Image URL</label>
                    <input class="form-control" type="text" name="item[image]" value="<%= item.image %>"> 
                </div>
				<div class="form-group">
					<label for="price">Price</label>
                    <input class="form-control" type="number" name="item[price]" value="<%= item.price %>" min="0.01" step="0.01"> 
                </div>
				<!-- <div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
				</div> -->
                <div class="form-group">
					<label for="description">Description</label>
                    <input class="form-control" type="text" name="item[description]" value="<%= item.description %>"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/items/<%= item._id %>">Go Back</a>
        </div>
        
    </div>
<%- include("../partials/footer")%>
